# Dashboard UI Configuration

# Authentication
# Enable dev auth (hardcoded demo user) for development/testing
VITE_ENABLE_DEV_AUTH=true

# MCP Server Configuration
# URL of the MCP server (used for proxy configuration)
VITE_MCP_SERVER_URL=http://localhost:3001

# Dashboard Server (WebSocket)
VITE_DASHBOARD_SERVER_URL=ws://localhost:3001

# MCP Server port (for reference)
VITE_MCP_SERVER_PORT=3001

# Development Configuration
# Enable development mode features
VITE_DEV_MODE=true

# App Configuration
VITE_APP_TITLE="AI Agent Bus"
VITE_APP_DESCRIPTION="Multi-tenant workflow automation platform"

# Feature Flags
VITE_SHOW_DEBUG_INFO=true
VITE_ENABLE_AGENT_EDITOR=true
VITE_ENABLE_WORKFLOW_MARKETPLACE=true

# Optional: API endpoint overrides
# VITE_API_ENDPOINT=http://localhost:3001/api
# VITE_HEALTH_ENDPOINT=http://localhost:3001/health