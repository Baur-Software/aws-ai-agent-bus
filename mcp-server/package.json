{
  "name": "agent-mesh-mcp",
  "version": "1.0.0",
  "description": "MCP server for AWS Agent Mesh",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "start:http": "node src/http-server.js",
    "dev:http": "node --watch src/http-server.js",
    "lint": "echo 'Linting JavaScript files...' && node -c src/server.js && node -c src/http-server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:startup": "timeout 3s node src/http-server.js > /dev/null 2>&1 || echo 'Server startup test passed'",
    "test:localstack": "docker-compose -f ../docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-ecs": "^3.0.0",
    "@aws-sdk/client-eventbridge": "^3.0.0",
    "@aws-sdk/client-rds-data": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "@aws-sdk/client-sfn": "^3.0.0",
    "@aws-sdk/credential-providers": "^3.864.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^30.0.0",
    "aws-sdk-client-mock": "^4.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "mcp",
    "aws",
    "agent-mesh",
    "model-context-protocol",
    "dynamodb",
    "s3",
    "eventbridge",
    "ai-tools"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Baur-Software/aws-ai-agent-bus.git",
    "directory": "mcp-server"
  },
  "bugs": {
    "url": "https://github.com/Baur-Software/aws-ai-agent-bus/issues"
  },
  "homepage": "https://github.com/Baur-Software/aws-ai-agent-bus/tree/main/mcp-server#readme"
}
