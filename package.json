{
  "name": "aws-ai-agent-bus",
  "version": "1.0.0",
  "description": "AWS AI Agent Bus - MCP server with modern dashboard",
  "main": "mcp-server/src/server.js",
  "type": "module",
  "workspaces": [
    "mcp-server",
    "dashboard-ui"
  ],
  "scripts": {
    "start": "npm run start --workspace=mcp-server",
    "dev": "npm run dev --workspace=mcp-server",
    "start:http": "npm run start:http --workspace=mcp-server",
    "dev:http": "npm run dev:http --workspace=mcp-server",
    "test": "npm run test --workspace=mcp-server",
    "lint": "npm run lint --workspace=mcp-server",
    "ui:dev": "npm run dev --workspace=dashboard-ui",
    "ui:build": "npm run build --workspace=dashboard-ui",
    "ui:preview": "npm run preview --workspace=dashboard-ui",
    "dev:all": "concurrently \"npm run dev:http\" \"npm run ui:dev\"",
    "build:all": "npm run ui:build && echo 'All builds complete'",
    "install:all": "npm install --workspaces",
    "setup:ga-google-cloud": "npm run setup:ga-google-cloud --workspace=mcp-server",
    "report:users-by-country": "npm run report:users-by-country --workspace=mcp-server",
    "report:users-by-country-sample": "npm run report:users-by-country-sample --workspace=mcp-server",
    "tf:fmt": "terraform fmt -recursive",
    "tf:init": "cd infra/workspaces/${WS:-small/kv_store} && terraform init",
    "tf:plan": "cd infra/workspaces/${WS:-small/kv_store} && terraform plan -var env=${ENV:-dev}",
    "tf:apply": "cd infra/workspaces/${WS:-small/kv_store} && terraform apply -auto-approve -var env=${ENV:-dev}",
    "tf:destroy": "cd infra/workspaces/${WS:-small/kv_store} && terraform destroy -auto-approve -var env=${ENV:-dev}",
    "check:test-debt": "node scripts/pre-commit-check.js",
    "install:hooks": "bash scripts/install-hooks.sh",
    "ui:test": "npm run test --workspace=dashboard-ui",
    "test:all": "npm run test --workspace=mcp-server && npm run test --workspace=dashboard-ui && npm run check:test-debt"
  },
  "keywords": [
    "mcp",
    "aws",
    "agent-mesh",
    "model-context-protocol",
    "dynamodb",
    "s3",
    "eventbridge",
    "ai-tools"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Baur-Software/aws-ai-agent-bus.git",
    "directory": "mcp-server"
  },
  "bugs": {
    "url": "https://github.com/Baur-Software/aws-ai-agent-bus/issues"
  },
  "homepage": "https://github.com/Baur-Software/aws-ai-agent-bus/tree/main/mcp-server#readme",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
